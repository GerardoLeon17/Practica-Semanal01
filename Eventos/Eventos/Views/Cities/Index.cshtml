@model IEnumerable<Eventos.Models.City>

@{
    ViewBag.Title = "Index";
}

<br />
<p>
    <a href="@Url.Action("Create", "Cities")" class="btn- btn btn-success">Nueva ciudad</a>
</p>

<div class="row justify-content-center ">
    <div class="col-md-11">
        <div class="card m-2">
            <div class="card-header py-2 bg-secondary">
                <h4 class="text-center text-white">Lista de Ciudades</h4>
            </div>
            <div class="card-body">


                <table class="table table-hover table-sm">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PostalCode)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PostalCode)
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "Cities", new { id = item.Id })" class="text-warning"><i class="fas fa-edit"></i> </a> |
                                <a href="@Url.Action("Details", "Cities", new { id = item.Id })" class="text-info"><i class="fas fa-info-circle"></i></a> |
                                <a href="@Url.Action("Delete", "Cities", new { id = item.Id })" class="text-danger"><i class="fas fa-trash-alt"></i></a>
                           
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>

