@model Eventos.Models.City

@{
    ViewBag.Title = "Create";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <h4 class="display-4 ">Ciudades</h4>
        <hr />

    </div>

    <div class="form-horizontal col-md-5 border border-info rounded  text-black " style="background-color:#9db4f5">

        <div class="form-group  " style="margin-left:50px;">

            <div class="form-group">
                <label for="" class="col-md-5 col-form-label">Nombre</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="" class="col-md-5 col-form-label">Codigo postal</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PostalCode, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PostalCode, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="justify-content-center col-md-5" style="margin-left:100px;">
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>
            </div>
        </div>
    </div>

}

<div>
    <a href="@Url.Action("Index", "Cities")" class=" text-white btn  btn-danger" style="margin-left:20px; margin-top:10px;">Regresar</a>

</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
