@model Eventos.Models.City

@{
    ViewBag.Title = "Delete";
}

    <h2 class="display-4">Eliminar</h2>

    <div>

        <hr />
        <dl class="dl-horizontal">
            <dt class="lead">
                Nombre
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt class="lead">
                Codigo postal
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PostalCode)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <h6 class="font-weight-bold">Estas seguro de eliminar tu ciudad?</h6>
            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a href="@Url.Action("Index", "Cities")" class=" text-white btn  btn-dark" style="margin-left:20px;">Regresar</a>

            </div>
        }
    </div>
