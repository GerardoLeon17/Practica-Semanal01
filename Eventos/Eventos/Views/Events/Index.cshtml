@model IEnumerable<Eventos.Models.Event>

@{
    ViewBag.Title = "Index";
}
<br />
<p>
    <a href="@Url.Action("Create", "Events")" class="btn- btn btn-success">Nuevo evento</a>

</p>
<div class="row justify-content-center ">
    <div class="col-md-11">
        <div class="card m-2">
            <div class="card-header py-2 bg-secondary">
                <h4 class="text-center text-white">Lista de Eventos</h4>
            </div>
            <div class="card-body">
                <table class="table table-hover table-sm">
                    <tr>
                        <th>
                            Titulo
                        </th>
                        <th>
                            Lugar
                        </th>
                        <th>
                            Tipo de evento
                        </th>
                        <th>
                            Dia del evento
                        </th>
                        <th>
                            Capacidad
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Place)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TypeEvent)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DayEvent)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Capacity)
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "Events", new { id = item.Id })" class="text-warning"><i class="fas fa-edit"></i> </a> |
                                <a href="@Url.Action("Details", "Events", new { id = item.Id })" class="text-info"><i class="fas fa-info-circle"></i></a> |
                                <a href="@Url.Action("Delete", "Evetns", new { id = item.Id })" class="text-danger"><i class="fas fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>


