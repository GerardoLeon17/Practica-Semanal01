@model Eventos.Models.Event

@{
    ViewBag.Title = "Create";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row" >
        <h4 class="display-4 ">Eventos</h4>
        <hr />
        
    </div>

    <div class="form-horizontal col-md-5 border border-info rounded  text-black " style="background-color:#9db4f5"  >

        <div class="form-group  " style="margin-left:50px;">


            <div class="form-group ">
                <label for="" class="col-md-5 col-form-label">Titulo</label>
                <div class="col-md-10 ">
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="" class="col-md-5 col-form-label">Lugar</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Place, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Place, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="" class="col-md-5 col-form-label">Tipo de evento</label>
                <div class="col-md-10">

                    <select name="TypeEvent" class="form-control">
                        <option value="value">Elige un tipo</option>
                        <option>Familiar</option>
                        <option>Adultos</option>
                        <option>Infantil</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label for="" class="col-md-5 col-form-label">Dia del evento</label>
                <div class="col-md-10">
                    <input type="date" name="DayEvent" value="" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label for="" class="col-md-5 col-form-label">Capacidad</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Capacity, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Capacity, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-6  ">Selecciona una ciudad</label>
                <div class="col-md-10 ">
                    <select name="CityId" class="form-control">
                        <option>Elige una Ciudad</option>
                        @foreach (var item in ViewBag.Ciudades)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>
            </div>

            <div class="form-group">
                <div class="justify-content-center col-md-5" style="margin-left:100px;">
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>
            </div>
        </div>
    </div>
}

<div>
    <a href="@Url.Action("Index", "Cities")" class=" text-white btn  btn-danger" style="margin-left:20px; margin-top:10px;">Regresar</a>

</div>

<br>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
